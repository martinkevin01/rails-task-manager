<div class='container mt-4 border p-4 shadow-sm'>
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h2 class="mb-3"><%= @task.title %></h2>
      <p><%= @task.details %></p>
        <%= link_to 'Back to list', tasks_path, class: 'btn btn-secondary mx-2' %>
        <%= link_to 'Edit', edit_task_path(@task), class: 'btn btn-primary mx-2' %>
        <%= link_to "Delete", task_path(@task),
                    data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                    class: 'btn btn-danger mx-2' %>
    </div>
  </div>
</div>
